<!DOCTYPE html>
<html>
  <head>
    <title>Rescu</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
      
    <title>RescU</title>
  </head>

  <body>
    <header class="navbar navbar-default">
      <%= link_to 'RescU', root_path, :class=> "navbar-brand" %>
      <ul class="nav navbar-nav">
        <% if current_user.present? %>
          <li class="nav-item"> <%= link_to "Dashboard", '/dashboard'%> </li>
          <% if current_user.org_user %>
            <li class="nav-item"> <%= link_to "Manage Reports", '/'%> </li>
            <li class="nav-item"> <%= link_to "Map", '/'%> </li>
          <% else %>
            <li class="nav-item"> <%= link_to "My Reports", user_reports_path(current_user) %> </li>
          <% end %>
          <li class="navbar-item"> <%= link_to "New Report", new_user_report_path(current_user), class: 'btn' %> </li>
        <% else %>
          <li class="nav-item"> <%= link_to "About", '/' %> </li>
        <% end %>  
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
          <span class="navbar-text">  Logged in as <%= current_user.first_name%> </span>
          <li class="nav-item"> <%= link_to "Log Out", logout_path, method: "delete" %> </li>
          <% else %>
            <li class="nav-item"> <%= link_to "Sign In", login_path %> </li>
            <li  class="nav-item"> <%= link_to "Sign Up", signup_path%> </li>
          <% end %>
        </span> 
      </ul>
    </header>
    <% flash.each do |name, msg| -%>
     <%= content_tag :div, msg, class: name %>
    <% end -%>
    <%= yield %>
  </body>
</html>
