<h3>New Report</h3>
<%= form_for  @report, :html=> {:class => "form"} do |f| %>
  <div class="tag">
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :title, "Title", class: "col-md-4 control-label" %>
        <%= f.text_field :title,:value => @report.title %>
      </div>
    </div>
    </br>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :description, "Description", class: "col-md-4 control-label" %>
        <%= f.text_area :description, :value => @report.description, size: "104x7" %>
      </div>
     </div>
     <div class="form-group">
      <div class="col-md-8">
        <%= f.label :address, "Address", class: "col-md-4 control-label" %>
        <%= f.text_field :address, :value => @report.address, class: "form-control" %>
      </div> 
      <div class="col-md-8">
        <%= f.label :city, "City", class: "col-md-4 control-label" %>
        <%= f.text_field :city, :value => @report.city, class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :state, "State", class: "col-md-4 control-label" %>
        <%= f.text_field :state, :value => @report.state, class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :country, "Country", class: "col-md-4 control-label" %>
        <%= f.text_field :country,:value =>  @report.country, class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :zipcode, "Zipcode", class: "col-md-4 control-label" %>
        <%= f.text_field :zipcode, :value => @report.zipcode, class: "form-control" %>
      </div>
    </div>
    </br>
    <div class="form-group">
       <div class="col-md-8">
         <%= f.label :severity, "Severity", class: "col-md-4 control-label" %>
         <%= f.select :severity, ['Low', 'Moderate', 'Extreme'], :selected =>  @report.severity %>
       </div>
     </div>
  </div>
  </br>
    <div class="col-md-8">
      <%= button_to('Submit', reports_path(@report), :class => "btn btn-primary") %>
    </div>
  </div>
<% end %>
 




