<%= form_for  @report, :html=> {:class => "form"} do |f| %>
  <div class="tag">
    <div class="form-group">
      <div class="col-md-8">
        <h3>New Report</h3>
        <%= f.label :title, "Title", class: "col-md-4 control-label" %>
        <%= f.text_field :title, :placeholder => "Give a brief overview of the situation", class: "form-control" %>
      </div>
    </div>
    </br>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :description, "Description", class: "col-md-4 control-label" %>
        <%= f.text_area :description, size: "104x7",  :placeholder => "Tell us what's going on. The more details, the better" %>
      </div>
     </div>
     <div class="form-group">
      <div class="col-md-8">
        <%= f.label :address, "Address", class: "col-md-4 control-label" %>
        <%= f.text_field :address, :placeholder => "Address", class: "form-control" %>
      </div> 
      <div class="col-md-8">
        <%= f.label :city, "City", class: "col-md-4 control-label" %>
        <%= f.text_field :city, :placeholder => "City", class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :state, "State", class: "col-md-4 control-label" %>
        <%= f.text_field :state, :placeholder => "State", class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :country, "Country", class: "col-md-4 control-label" %>
        <%= f.text_field :country, :placeholder => "Country", class: "form-control" %>
      </div>
      <div class="col-md-8">
        <%= f.label :zipcode, "Zipcode", class: "col-md-4 control-label" %>
        <%= f.text_field :zipcode, :placeholder => "Zipcode", class: "form-control" %>
      </div>
    </div>
    </br>
    <div class="form-group">
       <div class="col-md-8">
         <%= f.label :severity, "Severity", class: "col-md-4 control-label" %>
         <%= f.select :severity, ['Low', 'Moderate', 'Extreme'], :prompt => 'Select One' %>
       </div>
     </div>
  </div>
  </br>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.check_box :anonymous , {}, "true", "false" %>
      <%= f.label :anonymous, "Submit anonymously", class: "col-md-4 control-label" %>
    </div>   
    <div class="col-md-8">
      <%= button_to('Submit', reports_path, :class => "btn btn-primary") %>
    </div>
  </div>
<% end %>
 




